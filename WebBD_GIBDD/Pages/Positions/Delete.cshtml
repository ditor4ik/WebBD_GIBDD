@page
@model WebBD_GIBDD.Pages.Positions.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены что хотите удалить эту должность</h3>
<div>
    <h4>Должность</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position.NamePosition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.NamePosition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position.Duties)
        </dt>
        <dd class="col-sm-10">
            @{
                string[] arr = Model.Position.Duties.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                for (int i = 0; i < arr.Length; i++)
                {
                    <li>@arr[i]</li>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Position.Requirements)
        </dt>
        <dd class="col-sm-10">
            @{
                arr = Model.Position.Requirements.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                for (int i = 0; i < arr.Length; i++)
                {
                    <li>@arr[i]</li>
                }
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Position.ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку</a>
    </form>
</div>
