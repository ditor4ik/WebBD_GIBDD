@page
@model WebBD_GIBDD.Pages.Drivers.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы уверены что хотите удалить этого водителя</h3>
<div>
    <h4>Водитель</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 ">
            @Html.DisplayNameFor(model => model.Driver.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.ID)
        </dd>
        <dt class="col-sm-2 ">
            @Html.DisplayNameFor(model => model.Driver.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Model.Driver.DateOfBirth.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.Address)
        </dt>
        <dd class="col-sm-10">
            @{
                string[] arr = Model.Driver.Address.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                for (int i = 0; i < arr.Length; i++)
                {
                    @arr[i]<br>
                }
            }
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Driver.PassportData)
        </dt>
        <dd class="col-sm-10">
            @{
                arr = Model.Driver.PassportData.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                for (int i = 0; i < arr.Length; i++)
                {
                    @arr[i]<br>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.DriversLicenseNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.DriversLicenseNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.DateIssueCertificate)
        </dt>
        <dd class="col-sm-10">
            @Model.Driver.DateIssueCertificate.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.EndDateCertificate)
        </dt>
        <dd class="col-sm-10">
            @Model.Driver.EndDateCertificate.ToLongDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.CategoryCertificate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.CategoryCertificate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.Description)
        </dt>
        <dd class="col-sm-10">
            @{
                arr = Model.Driver.Description.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                for (int i = 0; i < arr.Length; i++)
                {
                    @arr[i]<br>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.Staff)
        </dt>
        <dd class="col-sm-10">
            @{
                if (Model.Staff != null)
                {
                    <a asp-page="../Staffs/Details" asp-route-id="@Model.Staff.ID" style="color: #000; text-decoration: none;">
                        @Model.Staff.FullName
                    </a>
                }
                else
                {
                    <p>нет</p>
                }
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Driver.ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку</a>
    </form>
</div>
