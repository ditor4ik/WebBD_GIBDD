@page
@model WebBD_GIBDD.Pages.Staffs.CreateModel


@{
    ViewData["Title"] = "Добавить";
}

<h1>Добавить</h1>

<h4>Сотрудника</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Staff.FullName" class="control-label"></label>
                <input asp-for="Staff.FullName" class="form-control" />
                <span asp-validation-for="Staff.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Age" class="control-label"></label>
                <input asp-for="Staff.Age" class="form-control" />
                <span asp-validation-for="Staff.Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Staff.Gender" class="control-label"></label>
                <select asp-for="Staff.Gender" asp-items="Model.SelGender" class="form-control"></select>
                <span asp-validation-for="Staff.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Address" class="control-label"></label>
                <textarea asp-for="Staff.Address" class="form-control" ></textarea>
                <span asp-validation-for="Staff.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Phone" class="control-label"></label>
                <input asp-for="Staff.Phone" class="form-control" />
                <span asp-validation-for="Staff.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PassportData" class="control-label"></label>
                <textarea asp-for="Staff.PassportData" class="form-control" ></textarea>
                <span asp-validation-for="Staff.PassportData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Должность</label>
                <select asp-for="Staff.PositionID" asp-items="Model.SelPosition" class="form-control">
                    <option value="-1">нет</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Звание</label>
                <select asp-for="Staff.RankID" asp-items="Model.SelRank" class="form-control">
                    <option value="-1">нет</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
