@page
@model WebBD_GIBDD.Pages.Rank.DetailsModel

@{
    ViewData["Title"] = "Подробная информация";
}

<h1>Подробная информация</h1>

<div>
    <h4>Звание</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rank.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank.NameRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rank.NameRank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rank.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank.Duties)
        </dt>
        <dd class="col-sm-10">
            @{
                string[] arr = Model.Rank.Duties.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                for (int i = 0; i < arr.Length; i++)
                {
                    <li>@arr[i]</li>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank.Requirements)
        </dt>
        <dd class="col-sm-10">
                @{
                    arr = Model.Rank.Requirements.Split(new char[] { '\n' }, StringSplitOptions.RemoveEmptyEntries);
                    for (int i = 0; i < arr.Length; i++)
                    {
                        <li>@arr[i]</li>
                    }
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Rank.ID">Изменить</a> |
    <a asp-page="./Index">Вернуться к списку</a>
</div>
