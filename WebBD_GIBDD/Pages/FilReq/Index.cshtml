@page
@model WebBD_GIBDD.Pages.FilReq.IndexModel
@{
    ViewData["Title"] = "Список запросов и фильтров";
}
<script>
    function BtnFun(ClassName, obj) {
        var value = obj.value;
        var name = "." + ClassName;
        if (value[0] != "-") {
            $(name).prop('disabled', false);
        }
        else {
            $(name).prop('disabled', true);
        }
    }
</script>
<div class="accordion" id="accordionExample">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link text-dark" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Запросы
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
                <a asp-area="" asp-page="Request/PersonDep" class="text-dark">Отдел кадров</a><br />
                <a asp-area="" asp-page="Request/ListAuto" class="text-dark">Список автомобилей</a><br />
                <a asp-area="" asp-page="Request/ListStolen" class="text-dark">Список угонов</a><br />
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed text-dark" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Фильтры
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                <form>
                    Отобразить сотрудников с должностью:
                    <select asp-items="Model.SelPosition" name="id" class="form-control-sm" onclick="BtnFun('FilPos', this)">
                        <option value="-1">не выбран</option>
                    </select>
                    <button asp-page="Filter/FilterPosition" class="btn btn-primary FilPos" disabled>Отфильтровать</button>
                </form>
                <br />
                <form>
                    Отобразить сотрудников со званием:
                    <select asp-items="Model.SelRank" name="id" class="form-control-sm" onclick="BtnFun('FilRank', this)">
                        <option value="-1">не выбран</option>
                    </select>
                    <button asp-page="Filter/FilterRank" class="btn btn-primary FilRank" disabled>Отфильтровать</button>
                </form>
                <br />
                <form>
                    Отобразить автомобили владельца:
                    <select asp-items="Model.SelDriver" name="id" class="form-control-sm" onclick="BtnFun('FilDriver', this)">
                        <option value="-1">не выбран</option>
                    </select>
                    <button asp-page="Filter/FilterDriver" class="btn btn-primary FilDriver" disabled>Отфильтровать</button>
                </form>
                <br />
                <form>
                    Отобразить автомобили с тех. осмотром:
                    <select asp-items="Model.SelTechInsp" name="ti" class="form-control-sm" onclick="BtnFun('FilTech', this)">
                        <option value="-1">не выбран</option>
                    </select>
                    <button asp-page="Filter/FilterTechInsp" class="btn btn-primary FilTech" disabled>Отфильтровать</button>
                </form>
                <br />
                <form>
                    Отобразить найденные или ненайденные автомобили:
                    <select asp-items="Model.SelFind" name="find" class="form-control-sm" onclick="BtnFun('FilFind', this)">
                        <option value="-1">не выбран</option>
                    </select>
                    <button asp-page="Filter/FilterFind" class="btn btn-primary FilFind" disabled>Отфильтровать</button>
                </form>
            </div>
        </div>
    </div>
</div>
