@page
@model WebBD_GIBDD.Pages.FilReq.Request.PersonDepModel
@{
    ViewData["Title"] = "Отдел кадров";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Сотрудник
            </th>
            <th>
                Звание
            </th>
            <th>
                Должность
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int num = 0; num < Model.Staff.Count; num++)
        {
            var item = Model.Staff[num];
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @{
                        try
                        {
                            @Model.Rank.First(r => r.ID == item.RankID).NameRank
                        }
                        catch
                        {
                            <p>нет</p>
                        }
                    }
                </td>
                <td>
                    @{
                        try
                        {
                            @Model.Position.First(r => r.ID == item.PositionID).NamePosition
                        }
                        catch
                        {
                            <p>нет</p>
                        }
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>